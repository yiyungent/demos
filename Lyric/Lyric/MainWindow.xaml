    <Grid>
        <Border CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Color="Red" Opacity="0.3"/>
            </Border.Background>
            <TextBlock Width="500" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Text="我是歌词！！！！！！！！！" />
        </Border>
    </Grid>
